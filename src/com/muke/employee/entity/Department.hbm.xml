<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.muke.employee.entity.Department"
		table="department">
		<id name="did" column="did">
			<generator class="native" />
		</id>

		<property name="dname" column="dname" length="20" />
		<property name="ddesc" column="ddesc" length="100" />

		<!-- 关联关系映射 -->
		<set name="employees" cascade="delete" inverse="true"><!-- inverse="true"表示放弃一对多的维护权 -->
			<key column="dno" />
			<one-to-many class="com.muke.employee.entity.Employee" />
		</set>
	</class>
</hibernate-mapping>